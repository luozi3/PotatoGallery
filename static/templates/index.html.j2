<!doctype html>
<html lang="zh-CN">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ site_name }}{% if site.brand_tagline %} ｜ {{ site.brand_tagline }}{% endif %}</title>
  <meta name="description" content="{{ site_description }}">
  <meta name="theme-color" content="{{ site.theme_color }}">
  {% include "partials/theme_init.html.j2" %}
  {% if site_url %}
  <link rel="canonical" href="{{ site_url }}/">
  {% endif %}
  <meta property="og:title" content="{{ site_name }}">
  <meta property="og:description" content="{{ site_description }}">
  <meta property="og:type" content="website">
  <meta property="og:locale" content="{{ site.locale }}">
  {% if site_url %}
  <meta property="og:url" content="{{ site_url }}/">
  {% endif %}
  {% if og_image %}
  <meta property="og:image" content="{{ og_image }}">
  {% endif %}
  <meta name="twitter:card" content="summary_large_image">
  <link rel="stylesheet" href="/static/styles/gallery.css?v={{ static_version }}">
  {% if site.live2d.enabled %}
  <link rel="stylesheet" href="{{ site.live2d.base_url }}/live2d/css/live2d.css">
  {% endif %}
  {% if json_ld %}
  <script type="application/ld+json">{{ json_ld | safe }}</script>
  {% endif %}
</head>
<body class="page-home">
  {% set orientation_labels = {"portrait": "竖屏", "landscape": "横屏", "square": "方形", "unknown": "未标"} %}
  {% set size_labels = {"ultra": "超清", "large": "高清", "medium": "中等", "compact": "轻量", "unknown": "未标"} %}
  <a class="skip-link" href="#main-content">跳到主要内容</a>
  {% include "partials/topbar.html.j2" %}

  <main id="main-content" tabindex="-1">
    <div class="home-layout">
      {% include "partials/sidebar_default.html.j2" %}
      <div class="home-main">
        <section class="home-tag-strip" aria-label="热门标签">
          <div class="tag-strip-label">标签</div>
          <div class="tag-strip-list" data-tag-strip-list>
            {% if top_tags %}
            {% for tag in top_tags[:6] %}
            <a class="tag-chip" href="/tags/{{ tag.slug }}/" style="{{ tag.style }}">#{{ tag.tag }}</a>
            {% endfor %}
            {% else %}
            <span class="tag-chip muted">暂无标签</span>
            {% endif %}
            <a class="tag-chip tag-chip-more" href="/tags/">→全部标签</a>
          </div>
        </section>

        <section class="controls" aria-label="筛选与子集">
          <div class="tabs" role="tablist" aria-label="分区切换">
            <button class="tab active" role="tab" aria-selected="true" data-collection-tab data-collection="all">
              全部 <span class="count">{{ stats.total }}</span>
            </button>
            {% for collection in collections_list %}
            <button class="tab" role="tab" aria-selected="false" data-collection-tab data-collection="{{ collection.slug }}">
              {{ collection.title }} <span class="count">{{ collection.count }}</span>
            </button>
            {% endfor %}
          </div>
          <div class="filters">
            <div class="filter-group" aria-label="方向">
              <span class="label">方向</span>
              <div class="filter-pills">
                <button class="pill active" aria-pressed="true" data-filter-pill data-filter="orientation" data-value="all">全部</button>
                <button class="pill" aria-pressed="false" data-filter-pill data-filter="orientation" data-value="portrait">竖屏</button>
                <button class="pill" aria-pressed="false" data-filter-pill data-filter="orientation" data-value="landscape">横屏</button>
                <button class="pill" aria-pressed="false" data-filter-pill data-filter="orientation" data-value="square">方形</button>
              </div>
            </div>
            <div class="filter-group" aria-label="清晰度">
              <span class="label">清晰度</span>
              <div class="filter-pills">
                <button class="pill active" aria-pressed="true" data-filter-pill data-filter="size" data-value="all">全部</button>
                <button class="pill" aria-pressed="false" data-filter-pill data-filter="size" data-value="ultra">超清</button>
                <button class="pill" aria-pressed="false" data-filter-pill data-filter="size" data-value="large">高清</button>
                <button class="pill" aria-pressed="false" data-filter-pill data-filter="size" data-value="medium">中等</button>
                <button class="pill" aria-pressed="false" data-filter-pill data-filter="size" data-value="compact">轻量</button>
              </div>
            </div>
          </div>
          <div class="filter-summary" data-filter-summary hidden>
            <span class="filter-summary-label">当前筛选</span>
            <div class="filter-summary-list" data-filter-summary-list></div>
            <button class="filter-summary-clear" type="button" data-filter-summary-clear>清空</button>
          </div>
        </section>

        <section class="gallery" data-gallery-grid data-masonry aria-live="polite">
      {% for image in images %}
      <article class="illust-card" data-image-card data-masonry-item data-card-link="{{ image.detail_path }}" data-collection="{{ image.collection }}" data-orientation="{{ image.orientation }}" data-size="{{ image.size_bucket }}" tabindex="0" role="link" aria-label="{{ image.title }}">
        <a class="thumb-link" href="{{ image.detail_path }}" aria-label="{{ image.title }}">
          <div class="thumb-shell" style="--thumb-ratio: {{ image.thumb_width }}/{{ image.thumb_height }};">
            <img class="thumb" src="/thumb/{{ image.thumb_filename }}" alt="{{ image.title }}" loading="lazy" width="{{ image.thumb_width }}" height="{{ image.thumb_height }}" onerror="this.onerror=null;this.src='/raw/{{ image.raw_filename }}';">
          </div>
        </a>
        <div class="card-body">
          <div class="title">{{ image.title }}</div>
          {% if image.description %}
          <p class="desc">{{ image.description }}</p>
          {% endif %}
          <div class="meta">
            <span>{{ image.width }}×{{ image.height }}</span>
            <span>{{ image.bytes_human }}</span>
            <span>{{ collections.get(image.collection, {}).get('title', image.collection) }}</span>
          </div>
          <div class="tags">
            <span class="tag accent">{{ orientation_labels.get(image.orientation, "未标") }}</span>
            <span class="tag">{{ size_labels.get(image.size_bucket, "未标") }}</span>
            {% for tag in image.tags[:3] %}
            <a class="tag ghost" href="/tags/{{ tag_slug_map.get(tag, tag)|urlencode }}/" style="{{ tag_style_map.get(tag, '') }}">#{{ tag }}</a>
            {% endfor %}
          </div>
        </div>
      </article>
      {% endfor %}
      <div class="empty" data-empty-state>当前筛选暂无作品，换个筛选试试。</div>
        </section>
      </div>
    </div>
  </main>

  <footer class="site-footer">
    <div class="footer-inner">
      <div class="footer-slot" aria-hidden="true"></div>
      {% if site.counter.enabled and site.counter.img_url %}
      <div class="counter">
        <img src="{{ site.counter.img_url }}" alt="访问统计" loading="lazy" referrerpolicy="no-referrer">
      </div>
      {% endif %}
    </div>
  </footer>

  {% if site.live2d.enabled %}
  {% set live2d_width = site.live2d.width or 300 %}
  {% set live2d_height = site.live2d.height or 336 %}
  <div id="landlord" class="live2d-root" aria-hidden="true" style="--live2d-width: {{ live2d_width }}px; --live2d-height: {{ live2d_height }}px;">
    <div class="message" style="opacity:0"></div>
    <canvas id="{{ site.live2d.canvas_id }}" width="{{ live2d_width }}" height="{{ live2d_height }}" class="live2d"></canvas>
  </div>
  <script src="{{ site.live2d.base_url }}/live2d/js/Setting.js" defer onerror="var r=document.getElementById('landlord');if(r){r.style.display='none';}"></script>
  <script src="{{ site.live2d.base_url }}/jquery.min.js" defer onerror="var r=document.getElementById('landlord');if(r){r.style.display='none';}"></script>
  <script src="{{ site.live2d.base_url }}/live2d/js/message.js" defer onerror="var r=document.getElementById('landlord');if(r){r.style.display='none';}"></script>
  <script src="{{ site.live2d.base_url }}/bundle.js" defer onerror="var r=document.getElementById('landlord');if(r){r.style.display='none';}"></script>
  <script>
    window.addEventListener('load', function () {
      if (!window.loadlive2d) return;
      try {
        loadlive2d("{{ site.live2d.canvas_id }}", "{{ site.live2d.model }}");
      } catch (e) {
        const root = document.getElementById('landlord');
        if (root) root.style.display = 'none';
      }
    });
  </script>
  {% endif %}

  <script src="/static/js/ui.js?v={{ static_version }}" defer></script>
  <script src="/static/js/gallery.js?v={{ static_version }}" defer></script>
</body>
</html>
