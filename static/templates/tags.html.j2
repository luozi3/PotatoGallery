<!doctype html>
<html lang="zh-CN">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>标签 ｜ {{ site_name }}</title>
  <meta name="description" content="{{ site_description }}">
  <meta name="theme-color" content="{{ site.theme_color }}">
  {% include "partials/theme_init.html.j2" %}
  {% if site_url %}
  <link rel="canonical" href="{{ site_url }}/tags/">
  {% endif %}
  <link rel="stylesheet" href="/static/styles/gallery.css?v={{ static_version }}">
</head>
<body class="page-tags with-sidebar">
  <a class="skip-link" href="#main-content">跳到主要内容</a>
  {% include "partials/topbar.html.j2" %}

  <main id="main-content" tabindex="-1">
    <div class="home-layout">
      {% include "partials/sidebar_default.html.j2" %}
      <div class="home-main">
        <section class="tags-hero">
          <h1>标签</h1>
          <p class="lede">点击标签查看对应作品合集。</p>
        </section>
        <section class="tag-grid" aria-label="标签列表">
          {% for tag in tags %}
          <a class="tag-card" href="/tags/{{ tag.slug|urlencode }}/" style="{{ tag.style }}">
            <span class="tag-title">#{{ tag.tag }}</span>
            <span class="tag-count">{{ tag.count }} 件</span>
          </a>
          {% endfor %}
        </section>
      </div>
    </div>
  </main>

  <script src="/static/js/ui.js?v={{ static_version }}" defer></script>
</body>
</html>
